<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/dark">

    <TextView
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nombre_trabajo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/name_job"
        android:textSize="15dp"
        android:textColor="@color/textWhite" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:id="@+id/name_job_input"
        android:layout_below="@+id/nombre_trabajo"
        android:layout_alignLeft="@+id/nombre_trabajo"
        android:layout_alignStart="@+id/nombre_trabajo"
        android:textColor="@color/textWhite"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:text="@string/description"
        android:textSize="15dp"
        android:layout_below="@+id/name_job_input"
        android:layout_alignLeft="@+id/name_job_input"
        android:layout_alignStart="@+id/name_job_input"
        android:textColor="@color/textWhite" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:id="@+id/description_input"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textColor="@color/textWhite"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="24dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:text="@string/date"
        android:textSize="15dp"
        android:layout_below="@+id/description_input"
        android:layout_alignLeft="@+id/description_input"
        android:layout_alignStart="@+id/description_input"
        android:textColor="@color/textWhite" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="34dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/date_input"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="@color/textWhite"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_camera"
        android:id="@+id/add_photos"
        android:layout_below="@+id/date_input"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/insert"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insert_job"
        android:includeFontPadding="true"
        android:textSize="14dp"
        />
</RelativeLayout>